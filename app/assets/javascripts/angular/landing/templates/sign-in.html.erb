<ng-include src="'<%=asset_path("shared/left-menu.html") %>'"></ng-include>

<div class="sun-landing-wrapper" ng-class="{'active': isMenuActive}">
  <ng-include src="'<%=asset_path("shared/header-signed-out.html") %>'"></ng-include>

  <main class="sun-landing fixed-footer">

    <div class="sun-fixed-bg sun-bg-1" id="anchor_1">
      <div class="sun-sign-in-wrapper">
        <div class="row">
          <div class="large-2 columns">
            &nbsp;
          </div>

          <div class="large-8 columns">
            <h1>Promoter Login</h1>

            <form name="form" ng-submit="signIn()" novalidate>
              <label for="user_email">Email</label>
              <p>
                <span ng-show="showValidationMessages && !!form.user_email.$invalid" class="radius alert label">This is not a valid email</span>
                <input ng-model="user.email" id="user_email" name="user_email" type="email" ng-required='true' />
              </p>

              <label for="user_password">Password</label>
              <p>
                <span ng-show="showValidationMessages && !!form.user_password.$invalid" class="radius alert label">Enter password</span>
                <input ng-model="user.password" id="user_password" name="user_password" type="password" ng-required='true' />
              </p>

              <p>
                <input ng-model="user.remember_me" name="remember_me" id="remember_me" type="checkbox" />
                <label for="remember_me" class="checkbox small"> remember me</label>
              </p>

              <input class="large button" type="submit" value="Sign In" />
              <a ng-href="#/reset-password" class="forgot-password">Forgot Password?</a>
            </form>
          </div>

          <div class="large-2 columns">
            &nbsp;
          </div>

        </div>
      </div>
    </div>

    <ng-include src="'<%=asset_path("shared/footer.html") %>'"></ng-include>

  </main>
</div>
