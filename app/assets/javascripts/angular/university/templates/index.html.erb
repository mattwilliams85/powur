<ng-include src="'<%=asset_path("shared/header-signed-in.html") %>'"></ng-include>

<main class="sun-university">

  <div class="row">
    <div class="large-4 medium-6 columns left university-class-item-wrapper" ng-repeat="classItem in universityClasses.entities">
      <div class="class-item">
        <div class="image-wrapper"><img ng-src="{{classItem.properties.image_url}}" /></div>

        <div class="class-progress">&nbsp;</div>

        <div class="class-info">
          <h5 ng-if="classItem.properties.price > 0">${{classItem.properties.price}}</h5>
          <h6>{{classItem.properties.name}}</h6>
          <p class="description">{{classItem.properties.description}}</p>
          <a class="button small" ng-click="takeClassClick()" ng-if="canTakeClass(classItem)">Take Class</a>
          <a class="button small purchase" ng-click="purchaseClassClick()" ng-if="!canTakeClass(classItem)">Purchase</a>
        </div>
      </div>
    </div>
  </div>

  <ng-include src="'<%=asset_path("shared/footer.html") %>'"></ng-include>
</main>
