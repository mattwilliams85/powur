<ng-include src="'<%=asset_path("shared/header-admin.html") %>'"></ng-include>

<main class="sun-admin-user-groups">
  <div class="row">
    <div class="large-4 columns">
      <a ng-click="cancel()" class="button">Back</a>
    </div>
    <div class="large-8 columns">
      <h2>{{userGroup.title}}</h2>
    </div>
  </div>
  <div class="row">
    <div class="large-4 columns">
      <ng-include src="'<%=asset_path("shared/admin/user-group-menu.html") %>'"></ng-include>
    </div>

    <div class="large-8 columns">
      <div class="tabs-content">
        <!-- Requirements Panel -->
        <div>
          <div class="row">
            <div class="large-12 columns">
              <h3>Requirements</h3>
            </div>
          </div>
          <div class="row">
            <div class="large-12 columns">
              <h4>Add Requirement</h4>
              <!-- New Requirement Form -->
              <form name="newRequirementForm" ng-submit="create()">
                <ng-include src="'<%=asset_path("angular/admin/user-groups/templates/requirements/form.html.erb") %>'"></ng-include>
                <!-- Buttons -->
                <a ng-click="cancel()" class="button">Cancel</a>
                <input class="button" ng-disabled="isSubmitDisabled" type="submit" value="Create Requirement" />
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


</main>
