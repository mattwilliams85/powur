<ng-include onload="readyAdminHeader()" src="'<%=asset_path("shared/header-admin.html") %>'"></ng-include>

<main class="sun-admin-user-groups">
  <div class="row">
    <div class="large-4 columns">
      <a ng-click="cancel()" class="button">Back</a>
    </div>
    <div class="large-8 columns">
      <h2>{{userGroup.title}}</h2>
    </div>
  </div>
  <div class="row">
    <div class="large-4 columns">
      <!-- User Groups Menu -->
      <ng-include src="'<%=asset_path("shared/admin/user-group-menu.html") %>'"></ng-include>
    </div>

    <div class="large-8 columns">
      <div class="tabs-content">
        <!-- Overview Panel -->
        <div ng-show="view === 'overview'" ng-if="mode === 'show'">
          <h3>Group Overview</h3>
          <div class="row">
            <div class="large-4 columns">
              <div class="panel">
                <h2>{{users.length}}</h2>
                <h4>Users</h4>
              </div>
            </div>
            <div class="large-4 columns">
              <div class="panel">
                <h2>{{requirements.length}}</h2>
                <h4>Requirements</h4>
              </div>
            </div>
            <div class="large-4 columns">
              <div class="panel">
                <h2>{{bonuses.length}}</h2>
                <h4>Bonuses</h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


</main>
