<!-- Header -->
<ng-include src="'<%=asset_path("shared/header-signed-in.html") %>'"></ng-include>

<main class="powur-dashboard">

  <!-- Welcome Section -->

  <!-- QUIRK: Dandelion background extends to 100% width on large screens-->
  <div class="row">
    <div class="bg welcome-section large-12 columns"></div>
  </div>

  <div class="row">
  <!-- Welcome Content -->
    <div class="welcome-section large-12 columns">
      <ng-include src="'<%=asset_path("angular/dashboard/templates/sections/welcome.html") %>'"></ng-include>
    </div>
  </div>

  <!-- Social Media Share Quote Section -->

  <!-- QUIRK: Gray background extends to 100% width on large screens -->
  <div class="row">
    <div class="bg social-media-section large-12 columns show-for-large-up"></div>
  </div>

  <div class="row">
    <!-- Social Media Share Quote Content -->
    <div class="social-media-section large-12 columns">
      <ng-include src="'<%=asset_path("angular/dashboard/templates/sections/social-media.html") %>'"></ng-include>
    </div>
  </div>

  <!-- KPI Section -->
  <div class="row">
    <div class="kpi-section large-12 columns">
      <ng-include ng-controller="DashboardKPICtrl" src="'<%=asset_path("angular/dashboard/templates/sections/kpi.html") %>'"></ng-include>
    </div>
  </div>

  <!-- My Customers Section -->
  <div class="row">
    <div class="customers-section large-12 columns">
      <ng-include ng-controller="DashboardCustomersCtrl" src="'<%=asset_path("angular/dashboard/templates/sections/customers.html") %>'"></ng-include>
    </div>
  </div>

  <!-- My Team Section -->
  <div class="row">
    <div class="team-section large-12 columns">
      <ng-include ng-controller="DashboardTeamCtrl" src="'<%=asset_path("angular/dashboard/templates/sections/team.html") %>'"></ng-include>
    </div>
  </div>

</main>

<!-- Footer -->
<ng-include src="'<%=asset_path("shared/footer-signed-in.html") %>'"></ng-include>
