<form>
  <div class="row">
    <div class="large-6 columns">
      <fieldset>
        <legend><i class="fa fa-envelope"></i> Contact Information</legend>

        <!-- First/Last Name -->
        <div class="row">
          <div class="large-6 medium-6 columns">
            <label>First Name</label>
            <input ng-model="proposal.first_name" ng-disabled="mode === 'submitted'" type="text">
          </div>
          <div class="large-6 medium-6 columns">
            <label>Last Name</label>
            <input ng-model="proposal.last_name" ng-disabled="mode === 'submitted'" type="text">
          </div>
        </div>

        <!-- Email -->
        <div class="row">
          <div class="large-12 medium-12 columns">
            <label>Email</label>
            <input ng-model="proposal.email" ng-disabled="mode === 'submitted'" type="text">
          </div>
        </div>

        <!-- Phone -->
        <div class="row">
          <div class="large-12 medium-12 columns">
            <label>Phone</label>
            <input ng-model="proposal.phone" ng-disabled="mode === 'submitted'" type="text">
          </div>
        </div>

        <!-- Address -->
        <div class="row">
          <div class="large-12 medium-12 columns">
            <label>Address</label>
            <input ng-model="proposal.address" ng-disabled="mode === 'submitted'" type="text">
          </div>
        </div>

        <!-- City/State/ZIP -->
        <div class="row">
          <div class="large-5 medium-5 columns">
            <label>City</label>
            <input ng-model="proposal.city" ng-disabled="mode === 'submitted'" type="text">
          </div>
          <div class="large-3 medium-3 small-6 columns">
            <label>State</label>
            <select ng-model="proposal.state" ng-disabled="mode === 'submitted'">
              <option disabled selected value=""></option>
              <option ng-repeat="state in states" value="{{state.name}}" ng-selected="state.name === proposal.state">{{state.abbr}}</option>
            </select>
          </div>
          <div class="large-4 medium-4 small-6 columns">
            <label>ZIP</label>
            <input ng-model="proposal.zip" ng-disabled="mode === 'submitted'" type="text">
          </div>
        </div>

      </fieldset>
    </div>
    <div class="large-6 columns">
      <fieldset>
        <legend><i class="fa fa-bolt"></i> House and Utility Information</legend>

        <!-- Average Bill -->
        <div class="row">
          <div class="large-12 medium-12 columns">
            <label>Average Bill</label>
            <input ng-model="proposal.average_bill" type="text">
          </div>
        </div>

        <!-- Buttons -->
        <div class="row">
          <div class="large-12 columns">
            <!-- New Proposal Form Buttons -->
            <button class="button secondary" ng-show="mode === 'new'" ng-click="closeForm()">Cancel</button>
            <button class="button right" ng-show="mode === 'new'" ng-click="create()">Save</button>
            <!-- Incomplete Proposal Form Buttons -->
            <button class="button secondary" ng-show="mode === 'incomplete'" ng-click="closeForm()">Cancel</button>
            <button class="button secondary right" ng-show="mode === 'incomplete'" ng-click="create()">Update</button>
          </div>
        </div>

      </fieldset>
    </div>
  </div>
</form>