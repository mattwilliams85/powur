;(function() {
  'use strict';

  function config($routeProvider, $locationProvider, $sceProvider, $httpProvider) {
    $locationProvider.html5Mode(true);
    $sceProvider.enabled(false);
    $httpProvider.defaults.xsrfHeaderName = 'X-CSRF-Token';
    $httpProvider.defaults.headers.common["X-Requested-With"] = 'XMLHttpRequest';

    $routeProvider.
    when('/home', {
      templateUrl: '<%= asset_path("landing/templates/index.html") %>',
      controller: 'LandingCtrl'
    }).
    when('/dashboard', {
      templateUrl: '<%= asset_path("dashboard/templates/index.html") %>',
      controller: 'DashboardCtrl'
    }).
    when('/sign-in', {
      templateUrl: '<%= asset_path("landing/templates/sign-in.html") %>',
      controller: 'LandingCtrl'
    }).
    when('/sign-up/:inviteCode?', {
      templateUrl: '<%= asset_path("landing/templates/sign-up.html") %>',
      controller: 'LandingCtrl'
    }).
    when('/reset-password', {
      templateUrl: '<%= asset_path("landing/templates/reset-password.html") %>',
      controller: 'LandingCtrl'
    }).
    when('/edit-password/:resetPasswordToken', {
      templateUrl: '<%= asset_path("landing/templates/edit-password.html") %>',
      controller: 'LandingCtrl'
    }).

    // FAQ
    when('/customer-faq', {
      templateUrl: '<%= asset_path("landing/templates/customer-faq.html") %>',
      controller: 'LandingCtrl'
    }).
    when('/advocate-faq', {
      templateUrl: '<%= asset_path("landing/templates/advocate-faq.html") %>',
      controller: 'LandingCtrl'
    }).

    // Promo
    when('/create-wealth/:inviteCode?', {
      templateUrl: '<%= asset_path("promo/templates/create-wealth.html") %>',
      controller: 'PromoCtrl'
    }).
    when('/create-energy', {
      templateUrl: '<%= asset_path("promo/templates/create-energy.html") %>',
      controller: 'PromoCtrl'
    }).
    when('/why-solar', {
      templateUrl: '<%= asset_path("promo/templates/why-solar.html") %>',
      controller: 'PromoCtrl'
    }).
    when('/why-you', {
      templateUrl: '<%= asset_path("promo/templates/why-you.html") %>',
      controller: 'PromoCtrl'
    }).
    when('/why-direct-selling', {
      templateUrl: '<%= asset_path("promo/templates/why-direct-selling.html") %>',
      controller: 'PromoCtrl'
    }).
    when('/why-powur', {
      templateUrl: '<%= asset_path("promo/templates/why-powur.html") %>',
      controller: 'PromoCtrl'
    }).
    when('/our-origin', {
      templateUrl: '<%= asset_path("promo/templates/our-origin.html") %>',
      controller: 'PromoCtrl'
    }).
    when('/our-team', {
      templateUrl: '<%= asset_path("promo/templates/our-team.html") %>',
      controller: 'PromoCtrl'
    }).
    when('/our-dna', {
      templateUrl: '<%= asset_path("promo/templates/our-dna.html") %>',
      controller: 'PromoCtrl'
    }).

    // University
    when('/university', {
      templateUrl: '<%= asset_path("university/templates/index.html") %>',
      controller: 'UniversityCtrl'
    }).
    when('/university/classes/:classId/purchase', {
      templateUrl: '<%= asset_path("university/templates/purchase.html") %>',
      controller: 'UniversityCtrl'
    }).

    // Library
    when('/library', {
      templateUrl: '<%= asset_path("library/templates/index.html") %>',
      controller: 'LibraryCtrl'
    }).

    // Signed In User's static content pages
    when('/terms-of-service', {
      templateUrl: '<%= asset_path("user-static-content/templates/terms-of-service.html") %>',
      controller: 'UserStaticContentCtrl'
    }).
    when('/privacy-policy', {
      templateUrl: '<%= asset_path("user-static-content/templates/privacy-policy.html") %>',
      controller: 'UserStaticContentCtrl'
    }).
    when('/disclaimer', {
      templateUrl: '<%= asset_path("user-static-content/templates/disclaimer.html") %>',
      controller: 'UserStaticContentCtrl'
    }).

    // User's Profile page
    when('/profile', {
      templateUrl: '<%= asset_path("profile/templates/edit.html") %>',
      controller: 'ProfileCtrl'
    }).

    otherwise({
      redirectTo: '/home'
    });
  }

  config.$inject = [
    '$routeProvider',
    '$locationProvider',
    '$sceProvider',
    '$httpProvider'];

  angular.module('powurApp').config(config);

})();
