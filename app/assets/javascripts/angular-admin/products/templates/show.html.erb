<main class="sun-admin-products">
  <div class="row">
    <div class="large-12 columns">
      <a ng-href="/admin/#/products/{{product.id}}/edit" class="button right">Edit Product</a>
      <h2>{{product.name}}</h2>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <div class="row">
        <div class="large-4 columns">
          <a ng-href="/admin/#/products/{{product.id}}/orders">
            <div class="panel">
              <h2>{{product.orders.length}}</h2>
              <h4>Orders</h4>
            </div>
          </a>
        </div>
        <div class="large-4 columns">
          <a ng-href="/admin/#/products/{{product.id}}/quotes">
            <div class="panel">
              <h2>{{product.quotes.length}}</h2>
              <h4>Quotes</h4>
            </div>
          </a>
        </div>
        <div class="large-4 columns">
          <a ng-href="/admin/#/products/{{product.id}}/bonuses">
            <div class="panel">
              <h2>{{product.bonuses.length}}</h2>
              <h4>Bonuses</h4>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>


</main>
