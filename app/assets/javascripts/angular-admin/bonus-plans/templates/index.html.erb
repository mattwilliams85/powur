<main class="sun-admin-bonus-plans">

  <!-- Header -->
  <div class="row">
    <div class="large-6 columns">
    <h2>Bonus Plans</h2>
    </div>
    <div class="large-6 columns">
    <a ng-href="/admin/#/bonus-plans/new" class="button right">Add Bonus Plan</a>
    </div>
  </div>
  <!-- List of Bonus Plans -->
  <div class="row" ng-if="products.length === 0">
      <div class="large-12 columns">
        <h4>There are no Bonus Plans in the system.</h4>
      </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <div ng-repeat="plan in bonusPlans" class="admin-bonus-plans-list-item">
        <div class="row">
          <div class="large-12 columns">
            <h3><a ng-href="/admin/#/bonus-plans/{{plan.properties.id}}">{{plan.properties.name}}</a></h3>
            <span class="start-date">Plan Start: {{plan.properties.start_month}}/{{plan.properties.start_year}}</span><br>
            <span class="plan-id">ID: {{plan.properties.id}}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>