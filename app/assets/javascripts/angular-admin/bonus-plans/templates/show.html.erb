<main class="sun-admin-products">
  <div class="row">
    <div class="large-12 columns">
      <a ng-href="/admin/#/bonus-plans/{{plan.id}}/edit" class="button right">Edit Bonus Plan</a>
      <h2>{{plan.name}}</h2>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <ul class="large-block-grid-4 small-block-grid-2">
        <!-- Plan Bonuses -->
        <li>
          <a ng-href="/admin/#/bonus-plans/{{plan.id}}/bonuses">
            <div class="panel callout">
              <h2>{{bonuses.length}}</h2>
              <h4>Bonuses</h4>
            </div>
          </a>
        </li>
        <!-- Plan Start Date -->
        <li>
          <div class="panel">
            <h2>{{plan.start_month}}/{{plan.start_year}}</h2>
            <h4>Start Date</h4>
          </div>
        </li>
        <!-- Plan Active/Inactive -->
        <li>
          <div class="panel">
            <h3 ng-if="plan.active === true">Active</h3>
            <h3 ng-if="plan.active === false">Not Active</h3>
          </div>
        </li>
      </ul>
    </div>
  </div>
</main>
