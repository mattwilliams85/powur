<form>
  <fieldset>
    <legend ng-if="mode === 'new'">New Bonus Plan</legend>
    <legend ng-if="mode === 'edit'">Update Bonus Plan</legend>
    <!-- Bonus Plan Form -->
    <div ng-repeat="field in formAction.fields" class="row">
      <div class="large-12 columns">
        <label class="inline" for="{{field.name}}">{{field.name}}</label>
        <!-- Selects -->
        <select ng-model="bonusPlan[field.name]" ng-if="field.type === 'select'" name="{{field.name}}" id="{{field.name}}">
          <option ng-repeat="(key, name) in field.options" value="{{key}}">{{name}}</option>
        </select>
        <!-- Text Inputs -->
        <input ng-model="bonusPlan[field.name]" ng-if="field.type === 'text'" type="text" name="{{field.name}}" id="{{field.name}}" value="{{field.value}}">
        <!-- Number Inputs -->
        <input ng-model="bonusPlan[field.name]" ng-if="field.type === 'number'" type="number" name="{{field.name}}" id="{{field.name}}" value="{{field.value}}">
      </div>
    </div>

    <div class="clearfix"></div>
    <!-- Delete Button -->
    <input ng-if="mode === 'edit' && canBeDeleted" class="tiny button understated right" ng-disabled="isSubmitDisabled" type="submit" ng-click="delete(bonusPlanObj)" value="Delete Bonus Plan" />
    <!-- Submit/Cancel Buttons -->
    <div class="row">
      <div class="large-12 columns">
        <a ng-click="cancel()" class="button secondary">Cancel</a>
        <input ng-if="mode === 'new'" class="button" ng-disabled="isSubmitDisabled" ng-click="create()" type="submit" value="Create Bonus Plan" />
        <input ng-if="mode === 'edit'" class="button" ng-disabled="isSubmitDisabled" ng-click="update()" type="submit" value="Update Bonus Plan" />
      </div>
    </div>
  </fieldset>
</form>