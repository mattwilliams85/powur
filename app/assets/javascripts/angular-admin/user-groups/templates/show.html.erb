<main class="sun-admin-user-groups">
  <div class="row">
    <div class="large-12 columns">
      <a ng-href="/admin/#/user-groups/{{userGroup.id}}/edit" class="button right">Edit Group</a>
      <h2 class="clearfix">{{userGroup.title}}</h2>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <div class="section-container tabs" data-section="tabs">
        <section class="active">
          <p class="title" data-section-title><a>Overview</a></p>
          <div class="content" data-section-content>
            <!-- Overview Panel -->
            <h3>Group Overview</h3>
            <div class="row">
              <div class="large-4 columns">
                <div class="panel">
                  <h2>{{users.length}}</h2>
                  <h4>Users</h4>
                </div>
              </div>
              <div class="large-4 columns">
                <div class="panel">
                  <h2>{{requirements.length}}</h2>
                  <h4>Requirements</h4>
                </div>
              </div>
              <div class="large-4 columns">
                <div class="panel">
                  <h2>{{bonuses.length}}</h2>
                  <h4>Bonuses</h4>
                </div>
              </div>
            </div>
          </div>
        </section>
        <section>
          <p class="title" data-section-title><a>Users</a></p>
          <div class="content" data-section-content>
            <p>Content of Users section.</p>
          </div>
        </section>
        <section>
          <p class="title" data-section-title><a>Requirements</a></p>
          <div class="content" data-section-content>
            <ng-include src="'<%=asset_path("angular-admin/user-groups/templates/requirements/index.html") %>'"></ng-include>
          </div>
        </section>
        <section>
          <p class="title" data-section-title><a>Bonuses</a></p>
          <div class="content" data-section-content>
            <p>Content of Bonuses section.</p>
          </div>
        </section>
      </div>
    </div>
  </div>


</main>
