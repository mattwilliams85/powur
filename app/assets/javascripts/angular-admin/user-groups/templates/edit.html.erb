<main class="sun-admin-user-groups">
  <div class="row">
    <div class="large-4 columns">
      <a ng-href="#/admin/user-groups/{{userGroup.id}}" class="button">Back</a>
    </div>
    <div class="large-8 columns">
      <h2>{{userGroup.title}}</h2>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <div class="row">
        <div class="large-4 columns"></div>
        <div class="large-8 columns">
          <h3>Edit User Group</h3>
        </div>
      </div>
      <div class="row">
        <!-- Edit Group Form -->
        <form name="userGroupForm" class="user-group-form" ng-submit="update()">
          <ng-include src="'<%=asset_path("angular/admin/user-groups/templates/form.html.erb")%>'"></ng-include>
          <!-- Buttons -->
          <input class="right button" ng-disabled="isSubmitDisabled" type="submit" value="Save" />
          <a ng-href="#/admin/user-groups/{{userGroup.id}}" class="right button">Cancel</a>
          <a ng-click="confirm('Are you sure you want to delete this group?', 'delete', group)" class="right alert button">Delete User Group</a>
        </form>
      </div>
    </div>
  </div>

</main>
