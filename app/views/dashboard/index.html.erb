<section id="dashboard_kpis" class="dashboard_section" data-drilldown-level="0">

	<div class="section_header">
		<div class="section_header_content">

			<% if params[:first_run] == "true" %>
			<% else %>

			<%= select_tag "Level", options_for_select(
				[
					"My Impact", 
				    "Level 2 Impact",
				    "Level 3 Impact",
				    "Level 4 Impact",
				    "Level 5 Impact",
				    "Level 6 Impact",
				    "Total Impact"
				], ["My Impact"]),
				{ :class => 'title_select' }
			%>

			<% end %>

		</div>
	</div>

	<div class="section_body">
		<div class="section_content">

			<% if params[:first_run] == "true" %>
				<div class="blank_state">
					You don't have any metrics yet. <a onclick="detailExpander('invite_detail', 'Invite');">Invite a fellow advocate</a> or <a href="#">add a customer quote</a> to watch your impact grow.
				</div>
			<% else %>

				<div class="kpi_thumbnail js-thumbnail_parent" data-kpi-type="type1">
