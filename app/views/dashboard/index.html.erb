						</div>
						<h3>Tons of C0<sub>2</sub> Saved</h3>
						<span class="subtext">Across your entire team</span>
						<span class="expand">
							<i class="fa fa-angle-down"></i>
						</span>
					</div>

					<% if false %>
						<%= render partial: "shared/kpi_environment_detail"%>
					<% end %>

				</div>

				<div class="kpi_thumbnail js-thumbnail_parent" data-kpi-type="type2">
					<div class="js-thumbnail">
						<canvas id="kpi_chart_sales" class="kpi_chart" width="76" height="76"></canvas>
						<h3>43 Rooftops</h3>
						<span class="subtext">Out of 98 quotes</span>
						<span class="expand">
							<i class="fa fa-angle-down"></i>
						</span>
					</div>
					<% if false %>
						<%= render partial: "shared/kpi_customer_detail"%>
					<% end %>
				</div>

				<div class="kpi_thumbnail js-thumbnail_parent" data-kpi-type="type3">
					<div class="js-thumbnail">
						<canvas id="kpi_chart_team" class="kpi_chart" width="222" height="76"></canvas>
						<h3>13 Team Members</h3>
						<span class="subtext">23 in your oganization</span>
						<span class="expand">
							<i class="fa fa-angle-down"></i>
						</span>
					</div>

					<% if false %>
						<%= render partial: "shared/kpi_team_detail"%>
					<% end %>

				</div>

				<div class="kpi_thumbnail js-thumbnail_parent" data-kpi-type="type4">
					<div class="js-thumbnail">
						<canvas id="kpi_chart_earnings" class="kpi_chart" width="222" height="76"></canvas>
						<h3>$32,450 Earnings</h3>
						<span class="subtext">Down 5% this week</span>
						<span class="expand">
							<i class="fa fa-angle-down"></i>
						</span>
					</div>

					<% if false %>
						<%= render partial: "shared/kpi_volume_detail"%>
					<% end %>

				</div>

				<div class="kpi_thumbnail js-thumbnail_parent" data-kpi-type="type5">
					<div class="js-thumbnail">
						<canvas id="kpi_chart_level_up" class="kpi_chart" width="222" height="76"></canvas>
						<h3>Rank 5</h3>
						<span class="subtext">Get 2 sales to reach Rank 6</span>
						<span class="expand">
							<i class="fa fa-angle-down"></i>
						</span>
					</div>

					<% if false %>
						<%= render partial: "shared/kpi_rank_detail"%>
					<% end %>

				</div>

			<% end %>

		</div>
	</div>
</section>

<section id="dashboard_quotes" class="dashboard_section" data-drilldown-level="0">
