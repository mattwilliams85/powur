<section id="dashboard_kpis" class="dashboard_section">
	<div class="section_header">
		<h2>Overview</h2>
		<ul>
			<li> 
				<%= select_tag "Show", options_for_select(
					[
						"1st forks", 
					    "2nd forks", 
					    "3rd forks",
					    "All forks"
					], ["1st fork"]) 
				%>
			</li>
		</ul>
	</div>
	<div class="section_content">
		<div class="kpi" onclick="detailExpander('tree_co2_detail');">
			<div class="thumbnail_graphic dev_img_placeholder">[smokestack graphic]</div>
			<h3>32 metric tons</h3>
			<span class="subtext">CO2 Saved</span>
			<i class="fa fa-angle-down"></i>
		</div>

		<div class="kpi" onclick="detailExpander('tree_equivalents_detail');">
			<div class="thumbnail_graphic dev_img_placeholder">[forrest graphic]</div>
			<h3>1 small forrest</h3>
			<span class="subtext">Impact Equivalent</span>
			<i class="fa fa-angle-down"></i>
		</div>

		<div class="kpi" onclick="detailExpander('tree_customer_detail');">
			<div class="thumbnail_graphic dev_img_placeholder">[house graphic]</div>
			<h3>421 Homes</h3>
			<span class="subtext">14,258 kWh</span>
			<i class="fa fa-angle-down"></i>
		</div>

		<div class="kpi" onclick="detailExpander('tree_team_detail');">
			<div class="thumbnail_graphic dev_img_placeholder">[data graphic]</div>
			<h3>32 Team Members</h3>
			<span class="subtext">93 in my organization</span>
			<i class="fa fa-angle-down"></i>
		</div>

		<div class="kpi" onclick="detailExpander('tree_volume_detail');">
			<div class="thumbnail_graphic dev_img_placeholder">[data graphic]</div>
			<h3>$32,450 Volume</h3>
			<span class="subtext">Down 5% this week</span>
			<i class="fa fa-angle-down"></i>
		</div>
	</div>

	<%= render partial: "shared/tree_co2_detail"%>

	<%= render partial: "shared/tree_equivalents_detail"%>

	<%= render partial: "shared/tree_customer_detail"%>

	<%= render partial: "shared/tree_team_detail"%>

	<%= render partial: "shared/tree_volume_detail"%>

</section>

<section id="dashboard_leads" class="dashboard_section">
	<div class="section_header">
		<h2>Your Leads</h2>
		<a href="#" class="button">Show tips</a>
		<ul>
			<li class="search"><i class="fa fa-search"></i></li>
			<li>
				<%= select_tag "Sort", options_for_select(
					[
						"By newest", 
					    "By oldest", 
					    "By most complete", 
					    "By least complete"
					], ["By newest"]) 
				%>
			</li>
		</ul>
	</div>
	<div class="section_content">
		<%= render partial: "shared/new_lead_thumbnail" %>
		<%= render partial: "shared/lead_thumbnail", :locals => {:first_name => "Marky", :last_name => "Mark", :has_address => true, :has_rooftop => false, :has_utility => true}%>
		<%= render partial: "shared/lead_thumbnail", :locals => {:first_name => "Barry", :last_name => "Bonilla", :has_address => false, :has_rooftop => false, :has_utility => false}%>
		<%= render partial: "shared/lead_thumbnail", :locals => {:first_name => "Jimmy", :last_name => "The Rat", :has_address => true, :has_rooftop => true, :has_utility => false}%>
	</div>
	<div class="section_notification positive">
		<a href="#">This is a positive notification about Mr. Mark - click to go to a new page...</a>
		<span class="dismiss"><i class="fa fa-times"></i></span>
	</div>

</section>


<section id="dashboard_pages" class="dashboard_section">
	<div class="section_header">
		<h2>Your Pages</h2>
	</div>
	<div class="section_content">
		<%= render partial: "shared/new_link_thumbnail" %>
		<%= render partial: "shared/invite_thumbnail" %>
	</div>

	<%= render partial: "shared/new_link_detail"%>
	<%= render partial: "shared/invite_detail"%>
</section>
