<section id="system_feedback">
	<%= render :partial => "shared/sonny_svg" %>
	<p>"You just started, so you're a sprout [classes: sprout, sapling, mighty oak, etc]. Add team members (branches) and leads (buds) to grow your customers (leaves)"</p>
</section>

<section id="dashboard_kpis" class="dashboard_section">
	<div class="section_header">
		<h2>Your Tree</h2>
		<ul>
			<li> 
				<%= select_tag "Show", options_for_select(
					[
						"1st forks", 
					    "2nd forks", 
					    "3rd forks"
					], ["1st fork"]) 
				%>
			</li>
		</ul>
	</div>
	<div class="section_content">
		<div class="kpi">
			<h3>3 branches <i class="fa fa-pagelines"></i></h3>
			<i class="fa fa-angle-down"></i>
		</div>
		<div class="kpi">
			<h3>7 Buds <i class="fa fa-tint"></i></h3>
			<i class="fa fa-angle-down"></i>
		</div>
		<div class="kpi">
			<h3>13 leaves <i class="fa fa-leaf"></i></h3>
			<i class="fa fa-angle-down"></i>
		</div>
		<div class="kpi">
			<h3>$3,531 in fruit</h3>
			<i class="fa fa-angle-down"></i>
		</div>
		<div class="kpi">
			<h3>14,258 kWh</h3>
			<i class="fa fa-angle-down"></i>
		</div>
	</div>
</section>

<section id="dashboard_payments" class="dashboard_section">
	<div class="section_header">
		<h2>Your Fruit</h2>
		<ul>
			<li class="search"><i class="fa fa-search"></i></li>
			<li> 
				<%= select_tag "Show", options_for_select(
					[
						"Past 3 months", 
					    "Past 6 months", 
					    "Past year", 
					    "All time"
					], ["Past 3 months"]) 
				%>
			</li>
			<li>
				<%= select_tag "Sort", options_for_select(
					[
						"By latest", 
					    "By earliest", 
					    "By highest", 
					    "By lowest"
					], ["By latest"]) 
				%>
			</li>
		</ul>
	</div>
	<div class="section_content">
		<%= render partial: "payment_thumbnail", :locals => {:amount => "$2,345", :mail_date => "4/1/14", :has_mailed => false}%>
		<%= render partial: "payment_thumbnail", :locals => {:amount => "$1,234", :mail_date => "3/1/14", :has_mailed => true}%>
		<%= render partial: "payment_thumbnail", :locals => {:amount => "$789", :mail_date => "2/1/14", :has_mailed => true}%>

	</div>
</section>

<section id="dashboard_customers" class="dashboard_section">
	<div class="section_header">
		<h2>Your leaves</h2>
		<ul>
			<li class="search"><i class="fa fa-search"></i></li>
			<li>
