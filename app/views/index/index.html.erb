<Script>
	$(document).ready(function(){
		responsiveLogic();

		$(window).resize(function(e){
			e.preventDefault();
			responsiveLogic();
		});

	});

	function responsiveLogic(){
		var max_width=1225;
		var current_width = (($(window).width()+15)>=max_width)? max_width:($(window).width()+15);
		var ratio = ((current_width/max_width)<0.5)? 0.5:(current_width/max_width);
		
		
		if(current_width>=1024){
			$("#index_banner").css("height", ($("#index_banner").width()*0.65)+"px" );
			$("#first_image").css("height", ($("#first_image").width()*0.73)+"px" );
			$("#doing_good").css("height", ($("#doing_good").width()*1.2)+"px" );

			$("p.large").css({
				"font-size":Math.round(28*ratio)+"px",
				"line-height":Math.round(48*ratio)+"px"
			});

			$("p.medium").css("font-size", (18*ratio)+"px");
			$("#first_image .our").css("font-size", Math.round(30*ratio)+"px");
			$("#first_image .goal").css("font-size", Math.round(150*ratio)+"px");

		}

		if(current_width>640 && current_width<1024){
			$("#index_banner").css("height", ($("#index_banner").width()*0.65)+"px" );
			$("#first_image").css("height", ($("#first_image").width()*0.73)+"px" );
			$("#doing_good").css("height", ($("#doing_good").width()*1.6)+"px" );


			$("p.large").css({
				"font-size":((Math.round(28*ratio)>18)?(Math.round(28*ratio)):18)+"px",
				"line-height":Math.round(48*ratio)+"px"
			});
			$("#first_image .our").css("font-size", Math.round(28*ratio)+"px");
			$("#first_image .goal").css("font-size", Math.round(150*ratio)+"px");
		}

		if(current_width<=640){
			$("#index_banner").css("height", "600px" );
			$("#first_image").css("height", "500px" );
			$("#doing_good").css("height", ($("#doing_good").width()*(2.9))+"px" );

			$("#first_image .our").css("font-size", Math.round(28*ratio)+"px");
			$("#first_image .goal").css("font-size", Math.round(130*ratio)+"px");

		}


	}
</script>

