<% content_for :javascript_includes do %>
	<%# javascript_include_tag "profile.js" %>
<% end %>

<style>
	.edit_user input
	{
		width:300px;
		padding:5px;
		margin:7px;
	}

	.edit_user label
	{
		position: relative;
	}

	.user_field
	{
		position: relative;
		display:block;
		margin:0;
	}
</style>

<section id="profile_kpis" class="profile_section" data-drilldown-level="0">

	<div class="section_header">
		<div class="section_header_content">
			<p>Profile Section Header</p>
		
		</div>
	</div>

	<div class="section_body">
		<div class="section_content">

		<h2>avatar</h2>

		<%= image_tag @user.avatar.url(:thumb) %>
		<%= form_for @user, remote:true, :url => update_avatar_profile_path, :html => { :multipart => true } do |form| %>
		  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
		<%= token_tag %>
			<%= form.check_box :remove_avatar %><%= form.label "Clear Avatar" %><br />
 
		  <%= form.file_field :avatar %>
		  <%= form.submit %>
		<% end %>
		</div>
		<section id="user_content" class="reset_password">
		</section>

	</div>
	
</section>

	