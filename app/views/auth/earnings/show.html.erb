var dropFlag = false;
var _detailsData = [];
// var detailsTemplate = Handlebars.compile("/templates/auth/earnings/_details.handlebars.html");
var startYear = (new Date()).getYear() + 1900
var startMonth = (new Date()).getMonth() + 1
var endYear = (new Date()).getYear() + 1900
var endMonth = (new Date()).getMonth() + 1
var currentMonth = 0;

_ajax({
