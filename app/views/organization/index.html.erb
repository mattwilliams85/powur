<section id="dashboard_payments" class="dashboard_section">
	<div class="section_header">
		<h2>Your Earnings</h2>
		<ul>
			<li class="search"><i class="fa fa-search"></i></li>
			<li> 
				<%= select_tag "Show", options_for_select(
					[
						"Past 3 months", 
					    "Past 6 months", 
					    "Past year", 
					    "All time"
					], ["Past 3 months"]) 
				%>
			</li>
			<li>
				<%= select_tag "Sort", options_for_select(
					[
						"By latest", 
					    "By earliest", 
					    "By highest", 
					    "By lowest"
					], ["By latest"]) 
				%>
			</li>
		</ul>
	</div>
	<div class="section_content">
		<%= render partial: "shared/payment_thumbnail", :locals => {:amount => "$2,345", :mail_date => "4/1/14", :has_mailed => false}%>
		<%= render partial: "shared/payment_thumbnail", :locals => {:amount => "$1,234", :mail_date => "3/23/14", :has_mailed => true}%>
		<%= render partial: "shared/payment_thumbnail", :locals => {:amount => "$789", :mail_date => "3/16/14", :has_mailed => true}%>
	</div>
	<div class="object_detail">
		<span class="dismiss"><i class="fa fa-times"></i></span>
		<div class="object_detail_content">
			<div class="object_detail_content_section summary">
				<h4>$1,234 total payment</h4>
				<span class="subtext">$12,345 total volume</span>
				<span class="subtext">Up 156% from previous</span>
			</div>
			<div class="object_detail_content_section">
				<h4>One-time: $456</h4>
				<span class="subtext">Johnson : 2/14/14 : $123</span>
				<span class="subtext">Pyle : 2/16/14 : $123</span>
				<span class="subtext">Gomez : 2/14/14 : $123</span>
				<span class="expand">
			  		<i class="fa fa-angle-down"></i>
			  	</span>
			</div>
			<div class="object_detail_content_section">
				<h4>Recurring: $678</h4>
				<span class="subtext">Johnson : 2/14/14 : $123</span>
				<span class="subtext">Pyle : 2/16/14 : $123</span>
				<span class="subtext">Gomez : 2/14/14 : $123</span>
				<span class="expand">
			  		<i class="fa fa-angle-down"></i>
			  	</span>
			</div>
			<div class="object_detail_content_section">
				<h4>Bonuses: $100</h4>
				<span class="subtext">kWh Savers Bonus: $100</span>
				<span class="expand">
			  		<i class="fa fa-angle-down"></i>
			  	</span>

			</div>
		</div>
	</div>
</section>

